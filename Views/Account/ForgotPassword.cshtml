@model SBM.Web.Models.Account.ForgotPasswordModel

@{
    ViewBag.Title = "Forgot your password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/styles/forgotpassword")

<div id="main" class="forgot-password">
    <div class="wrapper">
        <h2>Forgot your password?</h2>
        
        @using (Html.BeginForm(MVC.Account.ForgotPassword(), FormMethod.Post))
        {
            <div class="control-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @type = "email", @autofocus = "autofocus" })
            </div>
            <button type="submit" class="btn primary">
                <span>Submit</span>
            </button>
            <div class="clear"></div>
            <div class="error">@Html.ValidationMessageFor(m => m.Email)</div>
            <div>@Html.ValidationSummary(true)</div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
